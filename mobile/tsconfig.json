{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "jsx": "react",
    "strict": true,
    "esModuleInterop": true,
    "allowJs": false,
    "moduleResolution": "node",
    "noImplicitAny": true,
    "skipLibCheck": true,
    "baseUrl": "./src",
    "paths": {
      "@components/*": ["components/*"],
      "@screens/*": ["screens/*"],
      "@theme/*": ["theme/*"],
      "@models/*": ["types/*"],
      "@constants/*": ["constants/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "android", "ios"]
}
